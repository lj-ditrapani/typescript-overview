{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "2021",
    "sourceType": "module"
  },
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "rules": {
    "sort-imports": ["error"]
  },
  "plugins": ["@typescript-eslint"],
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["!.eslintrc.json", "!.prettierrc.json"]
}
